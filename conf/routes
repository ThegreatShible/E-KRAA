# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page


# Map static resources from the /public folder to the /assets URL path



GET           /                          controllers.TestController.test()
GET           /test                      controllers.TestController.test()

GET           /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

+nocsrf
POST          /test2                     controllers.TestController.test2()

POST          /addBook                   controllers.BookCreationController.addBook()

POST          /answer                    controllers.AnswerController.answerQuestion()

GET           /getAnswer/:id             controllers.AnswerController.getBookAnswer(id)
GET           /json                      controllers.TestController.createBookForm()

GET           /book/:id                  controllers.BookCreationController.getBook(id : Int)
GET           /book/questions/:id        controllers.BookCreationController.getQuestions(id : Int)


GET           /remove/:id                controllers.BookCreationController.removeBook(id :Int)

GET           /test3/:str                controllers.TestController.test3(str : Int)

POST          /createTeacher             controllers.UserController.createTeacher()

POST          /createPupil               controllers.UserController.createPupil()

POST          /auth                      controllers.UserController.authenticate()

GET           /sendMail                  controllers.TestController.sendMail()

#real routes


#SESSIONS
GET           /session/:sessionID        controllers.SessionController.getSession(sessionID)
POST          /session                   controllers.SessionController.createSession()
DELETE        /session/:sessionID        controllers.SessionController.removeSession(sessionID)


#GROUPS
GET           /group/all                 controllers.GroupController.getGroups()
GET           /group/:groupId            controllers.GroupController.getGroup(groupId : Int)

POST          /group                     controllers.GroupController.createGroup()

#USER
POST          /teacher                   controllers.UserController.createTeacher()
POST          /pupil                     controllers.UserController.createPupil()
GET           /teacher/:userID           controllers.UserController.getTeacher(userID)
GET           /pupil/:userID             controllers.UserController.getPupil(userID)
GET           /pupils/:groupID           controllers.UserController.getPupils(groupID : Int)
POST          /authenticate              controllers.UserController.authenticate()
GET           /confirm/:tokenID          controllers.UserController.confirmAuthentication(tokenID)


#ANSWERS
GET           /answers/:sessionID        controllers.AnswerController.getBookAnswer(sessionID)
POST          /answer                    controllers.AnswerController.answerQuestion()



